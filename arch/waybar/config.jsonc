[{
    "layer": "top",
    "position": "top",
    "output": "eDP-1", //for multimonitor setup, controlled by script
    "modules-left": [
        "custom/powermenu",
        "custom/hostname", 
        "custom/cliphist", 
        "hyprland/workspaces", 
        "hyprland/window",
        "custom/media"
    ],
    "modules-center": [ 
        "clock"
    ],
    "modules-right": [
        // "custom/pacman",
        "memory",
        "disk",
        "hyprland/language",
        "pulseaudio",
        "bluetooth",
        // "custom/vpn",
        "battery",
        "network",
        "group/hidden"
        //"tray"
    ],

    /* Modules Left */
    "custom/powermenu": {
		"format": "Û∞£á",
        "tooltip-format": "left-click: power menu\nright-click: system info",
        "on-click": "$HOME/.config/wofi/scripts/powermenu.sh",
        "on-click-right": "kitty --hold neofetch"
    },

    "custom/hostname": {
        "format": "Think and keep it simple ",
        "tooltip-format": "left-click: app menu \nright-click: shortcuts",
        "on-click": "wofi --show drun -a -w 2",
        "on-click-right": "$HOME/.config/waybar/scripts/shortcuts.sh"
    },

    "custom/cliphist": {
        "format": "ÔÉÜ",
        "tooltip-format": "clipboard history",
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy",
        "on-click-right": "cliphist wipe"
    },

    "hyprland/workspaces": {
      "format": "{name}",
      "tooltip": false,
      "all-outputs": true, 
      "on-click": "activate",
      "disable-scroll": true,
      "format-icons": {
        "active": "üü¢",
        "default": "üü©",
        "urgent": " ÔÅ™ "
      }
    },

    "custom/media": {
        "format": "{0} {1}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null"
    },

    "hyprland/window": {
        "format": "Ôâ¨  {class} ",
        "tooltip-format": "open file browser",
		/* "separate-outputs": false, */
        "on-click": "dolphin"
    },

    /* Modules Center */
    "clock": {
        "format": "ÔÅ≥ {:%a %e %b %Y  ÔÄó %H:%M}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>",
        "on-click": "xdg-open https://calendar.google.com/calendar"
    },

    "hyprland/language": {
        "format": "ÔïΩ {}",
        "format-en": "US",
        "format-ru": "RU",
        "max-length": 5,
        "min-length": 5,
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },

    /* Modules Right */
    "custom/pacman": {
        "format": "{icon}",
        "interval": 3600,
        "format-icons": ["Û∞Ö† ", "ÔÉ≠ "],
        "tooltip-format": "system updates",
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "max-length": 10,
        "min-length": 5
    },

    "pulseaudio": {
        "scroll-step": 3,
        "format": "{icon}  {format_source}", // {volume}%
        "format-bluetooth": "{icon}Ôäî {format_source}", // {volume}%
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": " ÔÑ∞",
        "format-source-muted": " ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol-qt",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },

    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        "format-icons": {
            "enabled": "Ôäì",
            "disabled": "Ôöî"
        },
        "on-click": "kitty -e bluetuith"
    },

    "battery": {
        "states": {
                "warning": 20,
                "critical": 10
        },
        "format": "{icon}", // {capacity}%
        "format-charging": "Óïõ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {capacity}% ({time})",
        "format-full": "ÔâÄ {capacity}%",
        "format-icons": ["ÔâÉ ", "ÔâÇ ", "ÔâÅ "],
        "on-click-right": "kitty --hold upower -i /org/freedesktop/UPower/devices/battery_BAT0"

    },

    "custom/vpn": {
        "format": "{icon} ",
        "tooltip-format": "{icon}",
        "format-icons": [ "Û∞°∞", "Û∞íç" ],
        "exec": "$HOME/.config/waybar/scripts/check_wireguard.sh",
        "on-click": "kitty --hold zsh -c 'sudo ls /etc/wireguard | grep conf$'",
        /* "exec": "echo '{\"class\": \"connected\"}'", */
        /* "exec-if": "test -d /proc/sys/net/ipv4/conf/Tstroy", */
        /* "exec-if": "test -d /proc/sys/net/ipv4/conf/Tstroy || [ -d /proc/sys/net/ipv4/conf/crb ]", */
        "return-type": "json",
        "interval": 10
    },

    "network": {
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "Û∞àÄ {ifname}: {ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Û∞åô disconnected",
        "format-alt": "Û∞àÄ {ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
        "tooltip-format-ethernet": "Û∞àÄ  {ifname}\nIP: {ipaddr}\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
        /* "on-click-right": "$HOME/.config/wofi/scripts/wifi_menu.sh" */
        "on-click-right": "kitty -e nmtui"

    },

    "group/hidden": {
        "orientation": "horizontal",
        "modules": [
            "custom/vpn",
            "custom/pacman",
            "tray"
        ],
        "drawer": {}
    },

    "tray": {
        "spacing": 5
    },

    "disk": {
	    "interval": 30,
	    "format": "ÔÇ†  {specific_used:0.2f} Gb ",
        "path": "/",
	    "unit": "GB",
        "on-click": "kitty --hold duf /"
    },

    "memory": {
        "interval": 30,
        "format": "Ôî∏ {used:0.1f} Gb ",
        "on-click": "kitty --hold btop"
    }

    /* "custom/sidebar": {
        "format": "{icon}",
        "format-icons": ["Ôîï ", "Ôîî "],
        "tooltip": false,
        "on-click": "eww open sidebar",
        "on-click-right": "eww kill",
        "exec": "$HOME/.config/eww/check_bar.sh",
        "return-type": "json",
        "interval": 5
    } */
}]
