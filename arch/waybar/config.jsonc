    "hyprland/workspaces": {
      "format": "{name}",
      /* "format": "{icon}", */
      "tooltip": false,
      "all-outputs": true, 
      "on-click": "activate",
      "disable-scroll": true,
      "format-icons": {
        "active": "üü¢",
        "default": "üü©",
        "urgent": " ÔÅ™ "
      }
    },

    "hyprland/window": {
        "format": "Ôâ¨  {class} ",
		"separate-outputs": false,
        "on-click": "nemo"
    },

    /* Modules Center */
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    },

    "custom/weather": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600
    },

    "clock": {
        "format": "ÔÅ≥ {:%A %e %B %Y  ÔÄó %H:%M} |",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>",
        "on-click": "gnome-calendar"
    },

    "hyprland/language": {
        "format": "ÔïΩ {}",
        "format-en": "US",
        "format-ru": "RU",
        "max-length": 5,
        "min-length": 5
    },

    /* Modules Right */
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÜÖ",
            "deactivated": "ÔÜÜ"
        },
        "tooltip": "true"
    },

    "cpu": {
        "interval": "1",
        "format": "Ôãõ  {max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
        "max-length": 15,
        "min-length": 15,
        "on-click": "kitty -e htop --sort-key PERCENT_CPU",
        "tooltip": false
    },

    "temperature": {
        "interval": "4",
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 74,
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "max-length": 7,
        "min-length": 7
    },

    "memory": {
        "interval": 30,
        "format": "Ôî∏ {used} Gb",
        "max-length": 25
    },

    "disk": {
        "interval": 30,
        "format": "Û∞ãä {free} ",
        "path": "/",
        "max-length": 50
    },

    "custom/pacman": {
        "format": "ÔÉ≠  {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "max-length": 10,
        "min-length": 5
    },

    "custom/themeswitcher": {
        "format": "ÔóÉ",
        "on-click": "/home/link/Documents/theme_switcher.sh light",
        "on-click-right": "/home/link/Documents/theme_switcher.sh dark",
        "tooltip": false
    },

    "pulseaudio": {
        "scroll-step": 3,
        "format": "{icon}  {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": " ÔÑ∞",
        "format-source-muted": " ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },

    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        "format-icons": {
            "enabled": "Ôäì",
            "disabled": "Ôöî"
        },
        "on-click": "kitty -e bluetuith"
    },

    "battery": {
        "states": {
                "warning": 30,
                "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Óïõ {capacity}%",
        "format-plugged": "Ôá¶  capacity}%",
        "format-alt": "{time} {icon}",
        "format-full": "ÔâÄ  {capacity}%",
        "format-icons": ["ÔâÉ ", "ÔâÇ ", "ÔâÅ "]
    },
    
    "network": {
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Ôöî",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´   {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔçó {bandwidthUpBits} Ôçî {bandwidthDownBits}",
        "tooltip-format-ethernet": "Ôûñ   {ifname}\nIP: {ipaddr}\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
        "on-click-right": "./Documents/wofi_actions/wifi_menu.sh"
    },

    "tray": {
        "spacing": 5
    },

    "custom/powermenu": {
		"format": "‚èª",
        "tooltip": false,
        "on-click": "./Documents/wofi_actions/powermenu.sh"
    }
},

