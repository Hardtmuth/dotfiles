{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "custom/hostname", 
        "custom/cliphist", 
        "hyprland/workspaces", 
        "hyprland/window"
    ],
    "modules-center": [ 
        "custom/weather", 
        "clock", 
        "hyprland/language"
    ],
    "modules-right": [
        "group/hardware", 
        "pulseaudio", 
        "bluetooth", 
        "battery", 
        "network", 
        "tray", 
        "custom/powermenu"
    ],

    /* Group */
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": { 
            "transition-duration": 500, 
            "children-class": "not-power", 
            "transition-left-right": false, 
        },
        "modules": [
            "custom/pacman",
			"idle_inhibitor",
            "cpu",
            "memory",
            "disk"
		]
    },
    /* Modules Left */
    "custom/hostname": {
        "format": " ThinkPad-x1 ",
        "on-click": "wofi --show drun"
    },

    "custom/cliphist": {
        "format": "ï…œ",
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy",
        "on-click-right": "cliphist wipe",
        "tooltip": false
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
            "1": "ï‰§ 1",
            "2": "ï™˜ 2",
            "3": "ï‰º 3",
            "4": "ï›¿ 4",
            "5": "ï‡‰ 5",
            "6": "ï†¶ 6",
            "7": "ï‰¬  7",
            "8": "ï‰¬  8",
            "9": "ï‰¬  9",
            "0": "ï‰¬  0",
            "urgent": "ï‰¬  ïª "
        }
    },

    "hyprland/window": {
        "format": "{class}",
		"separate-outputs": false
    },

    /* Modules Center */
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    },

    "custom/weather": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600
    },

    "clock": {
        "format": "ïƒ {:%A %e %B %Y  ï€—  %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>",
        "on-click": "gnome-calendar"
    },

    "hyprland/language": {
        "format": "ï•¾ {}",
        "format-en": "US",
        "format-ru": "RU",
        "max-length": 5,
        "min-length": 5
    },

    /* Modules Right */
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï†…",
            "deactivated": "ï††"
        },
        "tooltip": "true"
    },

    "cpu": {
        "interval": "1",
        "format": "ï‹›  {max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
        "max-length": 15,
        "min-length": 15,
        "on-click": "kitty -e htop --sort-key PERCENT_CPU",
        "tooltip": false
    },

    "temperature": {
        "interval": "4",
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 74,
        "format-critical": "ï±  {temperatureC}Â°C",
        "format": "{icon} {temperatureC}Â°C",
        "format-icons": ["ï«", "ï‹‰", "ï©"],
        "max-length": 7,
        "min-length": 7
    },

    "memory": {
        "interval": 30,
        "format": "ï”¸ {used} Gb",
        "max-length": 25
    },

    "disk": {
        "interval": 30,
        "format": "ïˆ³ {free} ",
        "path": "/",
        "max-length": 50
    },

    "custom/pacman": {
        "format": "ïƒ­  {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "max-length": 10,
        "min-length": 5
    },

    "pulseaudio": {
        "scroll-step": 3,
        "format": "{icon}  {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
        "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
        "format-muted": "ïš© {format_source}",
        "format-source": " ï„°",
        "format-source-muted": " ï„±",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï–",
            "headset": "ï–",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },

    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        "format-icons": {
            "enabled": "ïŠ“",
            "disabled": "ïš”"
        },
        "on-click": "kitty -e bluetuith"
    },

    "battery": {
        "states": {
                "warning": 30,
                "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "î•› {capacity}%",
        "format-plugged": "ï‡¦  capacity}%",
        "format-alt": "{time} {icon}",
        "format-full": "ï‰€  {capacity}%",
        "format-icons": ["ï‰ƒ ", "ï‰‚ ", "ï‰ "]
    },
    
    "network": {
        "format-wifi": "ï‡«  {essid}",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} ï–",
        "format-linked": "{ifname} (No IP) ï–",
        "format-disconnected": "ïš”",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "ï‡«   {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nï— {bandwidthUpBits} ï” {bandwidthDownBits}",
        "tooltip-format-ethernet": "ï–   {ifname}\nIP: {ipaddr}\nï¢ {bandwidthUpBits} ï£ {bandwidthDownBits}"
    },
    
    "tray": {
        "spacing": 5
    },
    
    "custom/powermenu": {
		"format": "â»",
        "tooltip": false,
        "on-click": "wlogout --protocol layer-shell"
    }
}

