    /* Group */
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": { 
            "transition-duration": 500, 
            "children-class": "not-power", 
            "transition-left-right": false
        },
        "modules": [
            "custom/pacman",
			"idle_inhibitor",
            "cpu",
            "memory",
            "disk"
		]
    },
    /* Modules Left */
    "custom/hostname": {
        "format": "Û∞£á ThinkPad-x1 ",
        "on-click": "wofi --show drun -a -w 2",
        "on-click-right": "/home/link/Documents/shortcuts.sh"
    },

    "custom/cliphist": {
        "format": "ÔÉÜ",
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy",
        "on-click-right": "cliphist wipe",
        "tooltip": false
    },

