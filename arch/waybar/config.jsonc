[{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "custom/hostname", 
        "custom/cliphist", 
        "hyprland/workspaces", 
        "hyprland/window"
    ],
    "modules-center": [ 
        "clock", 
        "hyprland/language"
    ],
    "modules-right": [
        "custom/pacman",
        "pulseaudio",
        "bluetooth",
        "battery",
        "network",
        "tray",
        "custom/powermenu"
    ],

    /* Modules Left */
    "custom/hostname": {
        "format": "Û∞£á Think and keep it simple ",
        "on-click": "wofi --show drun -a -w 2",
        "on-click-right": "/home/link/Documents/shortcuts.sh"
    },

    "custom/cliphist": {
        "format": "ÔÉÜ",
        "on-click": "cliphist list | wofi --dmenu | cliphist decode | wl-copy",
        "on-click-right": "cliphist wipe",
        "tooltip": false
    },

    "hyprland/workspaces": {
      "format": "{name}",
      "tooltip": false,
      "all-outputs": true, 
      "on-click": "activate",
      "disable-scroll": true,
      "format-icons": {
        "active": "üü¢",
        "default": "üü©",
        "urgent": " ÔÅ™ "
      }
    },

    "hyprland/window": {
        "format": "Ôâ¨  {class} ",
		"separate-outputs": false,
        "on-click": "nemo"
    },

    /* Modules Center */
    "clock": {
        "format": "ÔÅ≥ {:%A %e %B %Y  ÔÄó %H:%M} |",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "today-format": "<b>{}</b>",
        "on-click": "xdg-open https://calendar.google.com/calendar"
    },

    "hyprland/language": {
        "format": "ÔïΩ {}",
        "format-en": "US",
        "format-ru": "RU",
        "max-length": 5,
        "min-length": 5,
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },

    /* Modules Right */
    "custom/pacman": {
        "format": "ÔÉ≠  {}",
        "interval": 3600,
        "exec": "checkupdates | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty -e 'yay'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "max-length": 10,
        "min-length": 5
    },

    "pulseaudio": {
        "scroll-step": 3,
        "format": "{icon}  {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": " ÔÑ∞",
        "format-source-muted": " ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
    },

    "bluetooth": {
        "interval": 30,
        "format": "{icon}",
        "format-icons": {
            "enabled": "Ôäì",
            "disabled": "Ôöî"
        },
        "on-click": "kitty -e bluetuith"
    },

    "battery": {
        "states": {
                "warning": 30,
                "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Óïõ {capacity}%",
        "format-plugged": "Ôá¶  capacity}%",
        "format-alt": "{time} {icon}",
        "format-full": "ÔâÄ  {capacity}%",
        "format-icons": ["ÔâÉ ", "ÔâÇ ", "ÔâÅ "],
        "on-click": "kitty --hold upower -i /org/freedesktop/UPower/devices/battery_BAT0"

    },

    "network": {
        "format-wifi": "Ôá´  {essid}",
        "format-ethernet": "Û∞àÄ {ifname}: {ipaddr}/{cidr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Û∞åô",
        "format-alt": "Û∞àÄ {ifname}: {ipaddr}/{cidr}",
        "family": "ipv4",
        "tooltip-format-wifi": "Ôá´  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
        "tooltip-format-ethernet": "Û∞àÄ  {ifname}\nIP: {ipaddr}\nÔÅ¢ {bandwidthUpBits} ÔÅ£ {bandwidthDownBits}",
        "on-click-right": "./Documents/wofi_actions/wifi_menu.sh"
    },

    "tray": {
        "spacing": 5
    },

    "custom/powermenu": {
		"format": "ÔÄë",
        "tooltip": false,
        "on-click": "./Documents/wofi_actions/powermenu.sh"
    }
},

{
    "layer": "top",
    "position": "bottom",

    "modules-left": [
        "custom/vpn",
        "custom/currency-usd",
        "custom/currency-eur",
        "custom/currency-cny",
        "custom/currency-btc",
        "custom/currency-eth",
        "custom/weather"
        /* "custom/wireguard" */
    ],

    "modules-center": [
        "custom/media"
    ],

    "modules-right": [
        "idle_inhibitor",
        "custom/themeswitcher",
        "temperature",
        "cpu",
        "memory",
        "disk"
    ],

    "custom/weather": {
        "format": "| {}",
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600,
        "on-click": "xdg-open https://www.google.com/search?q=%D0%BF%D1%80%D0%BE%D0%B3%D0%BD%D0%BE%D0%B7+%D0%BF%D0%BE%D0%B3%D0%BE%D0%B4%D1%8B"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÜÖ",
            "deactivated": "ÔÜÜ"
        },
        "tooltip": "true"
    },

    "custom/themeswitcher": {
        "format": "ÔóÉ",
        "on-click": "/home/link/Documents/theme_switcher.sh light",
        "on-click-right": "/home/link/Documents/theme_switcher.sh dark",
        "tooltip": false
    },

    "cpu": {
        "interval": "1",
        "format": "| Ôíº  {usage}% - {max_frequency}GHz",
        /* "on-click": "kitty -e htop --sort-key PERCENT_CPU", */
        "on-click": "kitty -e btop -p 4",
        "tooltip": false
    },

    "temperature": {
        "interval": "4",
        "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
        "critical-threshold": 74,
        "format-critical": "ÔÅ±  {temperatureC}¬∞C",
        "format": "| {icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "on-click": "kitty --hold zsh -c 'sensors | grep coretemp -A 7'"
    },

    "memory": {
        "interval": 30,
        "format": "| Ôî∏ {used} Gb",
        /* "on-click": "kitty -e htop --sort-key PERCENT_MEM" */
        "on-click": "kitty -e btop -p 5"
    },

    "disk": {
        "interval": 30,
        "format": "| Û∞ãä {free}",
        "path": "/",
        "on-click": "kitty --hold -e df -h /home"
    },

    /* 
    "custom/filemanager": {
        "format": "Û∞Ä∂ ",
        "tooltip": true,
        "tooltip-format": "Filemanager",
        "on-click": "nemo"
    },
    */

    "custom/media": {
        "format": "{icon} {}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources/custom_modules folder
    },

