[{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "custom/hostname", 
        "custom/cliphist", 
        "hyprland/workspaces", 
        "hyprland/window"
    ],
    "modules-center": [ 
        /* "custom/weather",  */
        "clock", 
        "hyprland/language"
